generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agendamento {
  id       Int      @id @default(autoincrement())
  nomeCliente String
  telefone String
  servico  String
  data     DateTime
  hora     String
  status   String   @default("pendente")
}

model Barbeiro {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
