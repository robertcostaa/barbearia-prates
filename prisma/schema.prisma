generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agendamento {
  id          Int      @id @default(autoincrement())
  nomeCliente String
  telefone    String
  servico     String
  data        DateTime
  hora        String
  status      String   @default("agendado") // Mudei para "agendado"
}

model Barbeiro {
  id    Int    @id @default(autoincrement())
  nome  String // CAMPO ADICIONADO
  email String @unique // CORRIGIDO DE 'username' PARA 'email'
  senha String // CORRIGIDO DE 'password' PARA 'senha'
}